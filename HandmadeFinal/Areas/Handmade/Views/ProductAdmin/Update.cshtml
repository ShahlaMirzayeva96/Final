@model ProductsView
@{
    ViewData["Title"] = "Update";
}

    <div class="container-fluid" style="margin-top:90px;">
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Title:</label>
                        <input asp-for="@Model.Product.Name" class="form-control" />
                        <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <input asp-for="@Model.Product.Description" class="form-control" />
                        <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Count:</label>
                        <input asp-for="@Model.Product.Count" class="form-control" />
                        <span asp-validation-for="@Model.Product.Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Price:</label>
                        <input asp-for="@Model.Product.Price" class="form-control" />
                        <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Text:</label>
                        <input asp-for="@Model.Product.Text" class="form-control" />
                        <span asp-validation-for="@Model.Product.Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select class="form-control select2" name="CategoryId">
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.CategoryName</option>
                            }


                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label>Photo:</label>
                        @foreach (var item in Model.ProductImages)
                        {
                            <img src="~/img/category/@item.Image" width="200px" />

                            <input asp-for="@item.UpdatePhoto" class="form-control" accept="image\*" />
                            <span asp-validation-for="@item.UpdatePhoto" class="text-danger"></span>
                        }

                    </div>
                    <input type="submit" class="btn btn-primary" value="Update" />
                </form>
            </div>
        </div>
    </div>

