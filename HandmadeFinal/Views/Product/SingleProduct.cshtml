@model Product
@{
    ViewData["Title"] = "Məhsul";
}

<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Ana Səhifə/Məhsullar/@Model.Name</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="product_image_area section_padding">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-5">
                <div class="product_slider_img">
                    <div id="vertical">
                        @foreach (var item in Model.ProductImages)
                        {
                            <div data-thumb="img/@item.Image">
                                <img src="~/img/@item.Image" />
                            </div>
                        }


                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Model.Name</h3>
                    <h2>$@Model.Price</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                <span>Kateqoriya</span>:@Model.Category.CategoryName
                            </a>
                        </li>
                        @if (@Model.Count == 0)
                        {
                            <li>

                                <a href="#"> <span>Availibility</span>:Stokda yoxdur</a>
                            </li>
                        }
                        else
                        {
                            <li>

                                <a href="#"> <span>Availibility</span> :Stokda</a>
                            </li>
                        }

                    </ul>
                    <p>
                        @Model.Description
                    </p>
                   
                        <div class="add_to_cart">
                            <a @*href="/Product/AddBasket/@Model.Id"*@ class="btn_3 add-basket" id="aaa" data-id="@Model.Id">add to cart</a>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
