@model HomeModel
@{
    ViewData["Title"] = "Ana Səhifə";
}

<section class="banner_part" style="background-image: url('img/@Model.HomeBanners.ElementAt(0).Image')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner_slider">
                    <div class="single_banner_slider">
                        <div class="banner_text">
                            <div class="banner_text_iner">
                                <h5>@Model.HomeBanners.ElementAt(0).Subtitle</h5>
                                <h1>@Model.HomeBanners.ElementAt(0).Title</h1>
                                <a asp-controller="Product" asp-action="Index"class="btn_1">İndi Al</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="shipping_details section_padding ">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.ShippingDetails)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="single_shopping_details">
                        <img src="~/img/icon/@item.Icon" alt="">
                        <h4>@item.Title</h4>
                        <p>@item.Description</p>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<section class="feature_part pt-4">
    <div class="container-fluid p-lg-0 overflow-hidden">
        <div class="row align-items-center justify-content-between mb-5">
            @foreach (var category in Model.Categories)
            {
                <div class="col-lg-4 col-sm-6 mb-3">
                    <div class="single_feature_post_text">
                        <img src="~/img/@category.CategoryImage" alt="#">
                        <div class="hover_text">
                            <a href="/Product/Index?categoryid=@category.Id" class="btn_2">@category.CategoryName</a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<section id="brand-logo">
    <div class="container">
        <div class=" row mt-5 mb-5 owl-carousel brands align-items-center d-flex">
            @foreach (var icon in Model.BrandIcons)
            {
                <div class=" col-sm-8 ">

                    <img src="~/img/@icon.Icon" alt="">

                </div>


            }

        </div>
    </div>
</section>

