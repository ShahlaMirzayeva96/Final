@model LoginView
@{
    ViewData["Title"] = "Login";
}

<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Ana Səhifə/Giriş</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="login_part section_padding">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="login_part_text text-center">
                    <div class="login_part_text_iner">
                        <h2>New to our Shop?</h2>
                        <p>
                            There are advances being made in science and technology
                            everyday, and a good example of this is the
                        </p>
                        <div class="btn-group dropright">
                            <a asp-controller="Account" asp-action="Register" class="btn_3 btn btn-secondary ">
                                Qeydiyyat
                            </a>

                        </div>
                    </div>
                </div>
            </div>
            <div id="login_section" class="col-lg-6 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>
                            Login
                        </h3>
                        <form class="row contact_form" method="post">
                            <div class="col-md-12 form-group p_star">
                                <input autocomplete="off" asp-for="Email" type="text" class="form-control" id="email" name="email" value=""
                                       placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input autocomplete="off" asp-for="Password" type="password" class="form-control" id="password" name="password" value=""
                                       placeholder="Parol">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="creat_account d-flex align-items-center">
                                    <input autocomplete="off" asp-for="RememberMe" type="checkbox" id="f-option" name="selector">
                                    <label for="f-option">Yadda saxla</label>
                                </div>
                                <button type="submit" value="submit" class="btn_3">
                                    Daxil ol
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

