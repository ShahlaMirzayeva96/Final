@model BrandIcon
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid" style="margin-top:90px;">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
             


                <div class="form-group">
                    <label>Image:</label>
                    <img src="~/img/@Model.Icon" width="200px" />

                </div>
                <div class="form-group">
                    <label>Photo:</label>
                    <input asp-for="UpdatePhoto" class="form-control" accept="image\*" />
                    <span asp-validation-for="UpdatePhoto" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Update" />
            </form>
        </div>
    </div>
</div>

